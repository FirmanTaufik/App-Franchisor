<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".ui.franchisor.ui.FranchisorDaftarFranchiseeActivity">

    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/baseline_arrow_back_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_franchisor"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:boxBackgroundColor="#BC9C9C"
            app:boxStrokeColor="#38A96C"
            app:boxStrokeWidth="1dp"
            app:endIconTint="@android:color/black">

            <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusable="false" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:weightSum="2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_head"
            android:focusable="false"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:text="Pemilik" />

        <EditText
            android:id="@+id/edit_text_pemilik"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_head"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp" />
    </LinearLayout>
    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:paddingVertical="5dp"
            android:paddingHorizontal="8dp"
            android:text="Username"
            android:focusable="false"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edit_text_username"
            android:focusable="false"
            android:paddingVertical="5dp"
            android:inputType="text"
            android:paddingHorizontal="8dp"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:paddingVertical="5dp"
            android:paddingHorizontal="8dp"
            android:text="Password"
            android:focusable="false"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edit_text_password"
            android:paddingVertical="5dp"
            android:paddingHorizontal="8dp"
            android:inputType="textPassword"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:focusable="false"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:text="Alamat" />

        <EditText
            android:id="@+id/edit_text_alamat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:focusable="false"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:text="Nomor Telpon Outlet" />

        <EditText
            android:id="@+id/edit_text_nomor_telpon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:focusable="false"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:text="PIC" />

        <EditText
            android:id="@+id/edit_text_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:focusable="false"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:text="Nomor PIC" />

        <EditText
            android:id="@+id/edit_text_nomor_pic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:focusable="false"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:text="Email" />

        <EditText
            android:id="@+id/edit_text_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:focusable="false"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            android:text="Id_franchisor" />

        <EditText
            android:id="@+id/edit_text_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/backgorund_edt_text_input_body"
            android:editable="false"
            android:focusable="false"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_simpan"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="right"
        android:layout_marginTop="15dp"
        android:text="Simpan"
        android:textColor="@color/colorBlack"
        app:cornerRadius="15dp" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:visibility="gone" />
</LinearLayout>