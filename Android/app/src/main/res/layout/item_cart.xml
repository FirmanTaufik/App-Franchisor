<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="7dp"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image"
        android:src="@drawable/produk_1"
        android:layout_width="80dp"
        android:layout_height="80dp"/>

    <LinearLayout
        android:paddingHorizontal="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:id="@+id/text_view_title"
            android:textColor="@color/colorBlack"
            android:text="Cabe Rawit 1Kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_view_harga"
            android:textColor="#DFA308"
            android:text="RP 2100k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/button_min"
                android:src="@drawable/min_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginHorizontal="10dp"
                android:textAlignment="center"
                android:id="@+id/text_view_qty"
                android:textColor="#EA1515"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/button_plus"
                android:src="@drawable/ic_plus_circle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/button_delete"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_delete_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>