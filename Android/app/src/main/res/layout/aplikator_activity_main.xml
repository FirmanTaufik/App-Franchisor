<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    tools:context=".ui.aplikator.AplikatorMainActivity">

   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@drawable/bg_shape" />
       <com.google.android.material.floatingactionbutton.FloatingActionButton
           android:src="@drawable/baseline_logout_24"
           android:layout_gravity="right"
           android:layout_margin="15dp"
           app:backgroundTint="@color/colorPrimary"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <TextView
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Hi Aplikator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="15dp"
                android:weightSum="2"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_daftar_franchisor"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Daftar Franchisor"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        app:cornerRadius="50dp" />
                 <!--   <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:text="Edit data Franchisor"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        app:cornerRadius="50dp" />-->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_daftar_franchiseer"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:text="List data Franchiseer"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        app:cornerRadius="50dp" />
                </LinearLayout>
                <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_gravity="center"
                        android:src="@drawable/undraw_home_screen_4n7s"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginHorizontal="15dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dashboard"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:text="Dashboard"
                app:backgroundTint="@color/colorPurple"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                app:cornerRadius="50dp" />

            <ImageView
                android:layout_alignParentEnd="true"
                android:src="@drawable/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>