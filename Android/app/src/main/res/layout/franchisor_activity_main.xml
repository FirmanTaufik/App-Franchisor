<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGray"
    android:orientation="vertical"
    tools:context=".ui.franchisor.ui.FranchisorMainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_shape" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="15dp"
            android:src="@drawable/baseline_logout_24"
            app:backgroundTint="@color/colorPrimary" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_input_menu"
            android:layout_marginBottom="40dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi Franchisor"
                android:textColor="@color/colorBlack"
                android:textSize="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_daftar_franchisee"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:text="Daftar Franchisee"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        app:cornerRadius="50dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_data_dranchisee"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:text="data Franchisee"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        app:cornerRadius="50dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_transaksi_franchisee"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:text="Transaksi Franchisee"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        app:cornerRadius="50dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_input_produk"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="5dp"
                        android:text="Input Produk"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBlack"
                        app:cornerRadius="50dp" />
                </LinearLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|top"
                        android:layout_marginTop="50dp"
                        android:src="@drawable/undraw_home_screen_4n7s" />
                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_input_menu"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_above="@+id/relative_botom"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="5dp"
            android:text="Input Menu"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            app:cornerRadius="50dp" />

        <RelativeLayout
            android:id="@+id/relative_botom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="15dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dashboard"
                android:layout_width="180dp"
                android:layout_height="70dp"
                android:text="Dashboard"
                android:textAllCaps="false"
                android:textColor="@color/colorBlack"
                app:backgroundTint="@color/colorPurple"
                app:cornerRadius="50dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/logo" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>